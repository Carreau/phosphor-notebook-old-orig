body {
  margin: 0;
  padding: 0;
  background: #F5F6F7;
}


#main {
  position: absolute;
  overflow: hidden;
  border: 1px solid black;
  top: 10px;
  left: 10px;
  right: 10px;
  bottom: 10px;
  > .p-Widget {
    padding: 8px;
  }
}


.red {
  padding: 8px;
  background: #E74C3C;
}


.yellow {
  padding: 8px;
  background: #F1C40F;
}


.green {
  padding: 8px;
  background: #27AE60;
}


.blue {
  padding: 8px;
  background: #3498DB;
}


.content {
  text-align: center;
  font: 15px Helvetica;
  background: linear-gradient(180deg, #EEEEEE 0%, #CCCCCC 100%);
  box-shadow: inset 1px 1px 0px rgba(255, 255, 255, 0.15),
              inset -1px -1px 0px rgba(0, 0, 0, 0.3);
  > span {
    line-height: 25px;
  }
}
